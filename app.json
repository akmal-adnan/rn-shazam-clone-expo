{
  "expo": {
    "name": "shazam-rn",
    "slug": "shazam-rn",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "shazamrn",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.neo-gz.shazamrn",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.neo_gz.shazamrn"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/shazam-logo.png",
          "imageWidth": 300,
          "resizeMode": "contain",
          "backgroundColor": "#0088FE",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Arial-Bold-italic.ttf",
            "./assets/fonts/Arial-Bold.ttf",
            "./assets/fonts/Arial.ttf",
            "./assets/fonts/NeueMontreal-Bold.otf",
            "./assets/fonts/NeueMontreal-Light.otf",
            "./assets/fonts/NeueMontreal-Medium.otf",
            "./assets/fonts/NeueMontreal-Regular.otf"
          ]
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
