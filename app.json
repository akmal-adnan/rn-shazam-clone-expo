{
  "expo": {
    "name": "shazam-rn",
    "slug": "shazam-rn",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "shazamrn",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],

      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Arial-Bold-italic.ttf",
            "./assets/fonts/Arial-Bold.ttf",
            "./assets/fonts/Arial.ttf",
            "./assets/fonts/NeueMontreal-Bold.ttf",
            "./assets/fonts/NeueMontreal-Light.ttf",
            "./assets/fonts/NeueMontreal-Medium.ttf",
            "./assets/fonts/NeueMontreal-Regular.ttf"
          ]
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
